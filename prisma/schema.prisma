// Mission Control - Prisma Schema
// Database: PostgreSQL

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Enums
enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  URGENT
}

enum TaskStatus {
  OPEN
  IN_PROGRESS
  DONE
  BLOCKED
}

enum EventType {
  ONE_TIME
  RECURRING
}

enum RunStatus {
  PENDING
  RUNNING
  SUCCESS
  FAILED
  CANCELLED
}

enum MemorySource {
  MANUAL
  TASK_DONE
  RUN_FINISHED
}

enum TaskType {
  DEV
  RESEARCH
}

enum OpenclawLinkStatus {
  UNLINKED
  LINKED
  INVALID
  UNKNOWN
}

enum SwarmRunStatus {
  PENDING
  RUNNING
  RETRY_REQUESTED
  SUCCESS
  FAILED
  CANCELLED
}

enum SwarmWorktreeStatus {
  PROVISIONING
  READY
  DIRTY
  ARCHIVED
  FAILED
}

enum SwarmSessionStatus {
  STARTING
  ACTIVE
  IDLE
  COMPLETED
  FAILED
}

enum SwarmPRStatus {
  DRAFT
  OPEN
  MERGED
  CLOSED
}

enum SwarmCheckStatus {
  QUEUED
  RUNNING
  PASSED
  FAILED
  SKIPPED
}

enum SwarmRunType {
  FEATURE
  BUGFIX
  TEST
  DEPLOY
  REVIEW
}

// Users
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  assignedTasks Task[]     @relation("TaskAssignee")
  createdTasks  Task[]     @relation("TaskCreator")
  activityLog   Activity[]
  events        Event[]
  memories      Memory[]
  executedRuns  Run[]      @relation("UserRunner")

  @@index([email])
  @@map("users")
}

// Agents
model Agent {
  id                      String             @id @default(uuid())
  name                    String             @unique
  status                  String             @default("idle")
  config                  Json?
  currentTaskId           String?            @unique
  openclawAgentId         String?
  openclawLinkStatus      OpenclawLinkStatus @default(UNLINKED)
  openclawLastValidatedAt DateTime?
  artifacts               Json?
  createdAt               DateTime           @default(now())
  updatedAt               DateTime           @updatedAt

  assignedTasks Task[] @relation("TaskAssigneeAgent")
  executedRuns  Run[]  @relation("AgentRunner")

  @@index([status])
  @@index([currentTaskId])
  @@index([openclawAgentId])
  @@index([openclawLinkStatus])
  @@map("agents")
}

// Task Columns
model TaskColumn {
  id                String    @id @default(uuid())
  name              String    @unique
  position          Int
  taskType          TaskType?
  defaultRole       String?
  requiredArtifacts Json      @default("[]")
  requiredGates     Json      @default("[]")
  color             String?
  createdAt         DateTime  @default(now())

  tasks Task[]

  @@index([position])
  @@index([taskType, position])
  @@map("task_columns")
}

// Tasks
model Task {
  id          String       @id @default(uuid())
  title       String
  description String?      @db.Text
  taskType    TaskType     @default(DEV)
  columnId    String
  position    Int
  priority    TaskPriority @default(MEDIUM)
  status      TaskStatus   @default(OPEN)

  assignedToUserId  String?
  assignedToAgentId String?
  createdById       String

  dueDate     DateTime?
  startedAt   DateTime?
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  artifacts Json @default("[]")
  gates     Json @default("{}")

  column          TaskColumn @relation(fields: [columnId], references: [id])
  assignedToUser  User?      @relation("TaskAssignee", fields: [assignedToUserId], references: [id])
  assignedToAgent Agent?     @relation("TaskAssigneeAgent", fields: [assignedToAgentId], references: [id])
  createdBy       User       @relation("TaskCreator", fields: [createdById], references: [id])

  memories Memory[] @relation("MemoriesForTask")
  swarmRuns SwarmRun[]

  @@unique([columnId, position])
  @@index([columnId, status])
  @@index([assignedToUserId])
  @@index([assignedToAgentId])
  @@index([dueDate])
  @@map("tasks")
}

model WorkflowTemplate {
  id         String   @id @default(uuid())
  name       String
  taskType   TaskType
  stages     Json
  stageRules Json
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("workflow_templates")
}

// Events
model Event {
  id          String    @id @default(uuid())
  title       String
  description String?   @db.Text
  eventType   EventType @default(ONE_TIME)
  cronExpr    String?
  enabled     Boolean   @default(true)
  nextRunAt   DateTime?
  startAt     DateTime
  endAt       DateTime?
  createdBy   String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  artifacts Json?

  creator User  @relation(fields: [createdBy], references: [id])
  runs    Run[]

  @@index([eventType, startAt])
  @@index([enabled, nextRunAt])
  @@map("events")
}

// Runs
model Run {
  id                String    @id @default(uuid())
  eventId           String
  executedByAgentId String?
  executedByUserId  String?
  status            RunStatus
  output            String?   @db.Text
  error             String?   @db.Text
  startedAt         DateTime
  completedAt       DateTime?

  createdAt DateTime @default(now())

  artifacts Json?

  event           Event  @relation(fields: [eventId], references: [id])
  executedByAgent Agent? @relation("AgentRunner", fields: [executedByAgentId], references: [id])
  executedByUser  User?  @relation("UserRunner", fields: [executedByUserId], references: [id])

  memories Memory[] @relation("MemoriesForRun")

  @@index([eventId, startedAt])
  @@index([status])
  @@map("runs")
}

// Memories
model Memory {
  id              String                   @id @default(uuid())
  title           String
  content         String                   @db.Text
  summary         String?                  @db.Text
  source          MemorySource             @default(MANUAL)
  taskSourceRefId String?
  runSourceRefId  String?
  tags            String[]
  metadata        Json?
  searchVector    Unsupported("tsvector")?
  createdBy       String

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  artifacts Json?

  creator    User  @relation(fields: [createdBy], references: [id])
  sourceTask Task? @relation("MemoriesForTask", fields: [taskSourceRefId], references: [id])
  sourceRun  Run?  @relation("MemoriesForRun", fields: [runSourceRefId], references: [id])

  @@index([searchVector], type: Gin)
  @@index([taskSourceRefId, runSourceRefId])
  @@index([createdAt])
  @@map("memories")
}

// Activity Log
model Activity {
  id          String @id @default(uuid())
  entityType  String
  entityId    String
  action      String
  changes     Json?
  performedBy String

  createdAt DateTime @default(now())

  performer User @relation(fields: [performedBy], references: [id])

  @@index([entityType, entityId])
  @@index([performedBy])
  @@index([createdAt])
  @@map("activity")
}

model SwarmRun {
  id                  String         @id @default(uuid())
  taskId              String
  runType             SwarmRunType   @default(TEST) @map("run_type")
  status              SwarmRunStatus @default(PENDING)
  orchestratorAgentId String?        @map("orchestrator_agent_id")
  blockReason         String?        @map("block_reason")
  snapshot            Json?
  retryRequested      Boolean        @default(false)
  startedAt           DateTime?
  completedAt         DateTime?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  task       Task                  @relation(fields: [taskId], references: [id])
  worktrees  SwarmWorktree[]
  sessions   SwarmSession[]
  prs        SwarmPR[]

  @@index([taskId, status])
  @@index([runType])
  @@index([orchestratorAgentId])
  @@map("swarm_runs")
}

model SwarmWorktree {
  id        String             @id @default(uuid())
  swarmRunId String
  branch    String?
  path      String?
  status    SwarmWorktreeStatus @default(PROVISIONING)
  metadata  Json?
  createdAt DateTime           @default(now())
  updatedAt DateTime           @updatedAt

  swarmRun SwarmRun @relation(fields: [swarmRunId], references: [id])

  @@index([swarmRunId])
  @@unique([swarmRunId, branch])
  @@map("swarm_worktrees")
}

model SwarmSession {
  id         String             @id @default(uuid())
  swarmRunId String
  externalId String?
  status     SwarmSessionStatus @default(STARTING)
  metadata   Json?
  createdAt  DateTime           @default(now())
  updatedAt  DateTime           @updatedAt

  swarmRun SwarmRun @relation(fields: [swarmRunId], references: [id])

  @@index([swarmRunId])
  @@unique([swarmRunId, externalId])
  @@map("swarm_sessions")
}

model SwarmPR {
  id         String        @id @default(uuid())
  swarmRunId String
  repo       String?
  prNumber   Int?
  status     SwarmPRStatus @default(DRAFT)
  title      String?
  url        String?
  metadata   Json?
  createdAt  DateTime      @default(now())
  updatedAt  DateTime      @updatedAt

  swarmRun SwarmRun    @relation(fields: [swarmRunId], references: [id])
  checks   SwarmCheck[]

  @@unique([prNumber])
  @@index([prNumber])
  @@index([status])
  @@map("swarm_prs")
}

model SwarmCheck {
  id        String           @id @default(uuid())
  swarmPrId String
  name      String
  status    SwarmCheckStatus @default(QUEUED)
  details   String?          @db.Text
  metadata  Json?
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  swarmPr SwarmPR @relation(fields: [swarmPrId], references: [id])

  @@index([swarmPrId])
  @@map("swarm_checks")
}

model OrchestratorSetting {
  id                 String   @id @default(uuid())
  key                String   @unique
  value              String
  screenshotRequired Boolean  @default(false)
  requiredReviews    Json     @default("{\"codex\":true,\"gemini\":false,\"claude\":false}")
  metadata           Json?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  @@map("orchestrator_settings")
}
